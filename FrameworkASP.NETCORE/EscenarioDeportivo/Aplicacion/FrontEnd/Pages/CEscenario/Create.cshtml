@page
@model FrontEnd.Pages.CEscenario.CreateModel
@{
    ViewData["Title"]="Nuevo Escenario";
}

<h2>Adicionar Escenario</h2>
<h3 class="text-danger">@ViewData["Error"] </h3>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger" ></div>
            <div class="form-group">
                <b><label asp-for="escenario.Nombre" class="control-label"></label></b>
                <input asp-for="escenario.Nombre" class="form-control" placeholder="Canchas Panamericanas"/>
                <span asp-validation-for="escenario.Nombre" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <b><label asp-for="escenario.Espectadores" class="control-label"></label></b>
                <input asp-for="escenario.Espectadores" class="form-control" placeholder="23"/>
                <span asp-validation-for="escenario.Espectadores" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <b><label asp-for="escenario.Tipo" class="control-label"></label></b>
                <input asp-for="escenario.Tipo" class="form-control" placeholder="Multiple"/>
                <span asp-validation-for="escenario.Tipo" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <b><label asp-for="escenario.UnidadDeportivaId" class="control-label"></label></b>
                <select asp-for="escenario.UnidadDeportivaId" class="form-control">
                    <option value="">--Seleccionar Unidad Deportiva--</option>
                    @foreach (var uni in Model.lstUnidades){
                        <option value="@uni.Id">@uni.Nombre @uni.Direccion</option>
                    }
                </select>
                <span asp-validation-for="escenario.UnidadDeportivaId" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Adicionar"/>
                <a asp-page="./Index" class="btn btn-info">Regresar</a>
            </div>
        </form>
    </div>
</div>