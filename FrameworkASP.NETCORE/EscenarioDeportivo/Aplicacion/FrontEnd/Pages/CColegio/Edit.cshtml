@page
@model FrontEnd.Pages.CColegio.EditModel
@{
    ViewData["Title"]="Editar Colegio de Instrucción";
}
<h2>Editar Colegio de Instruccion</h2>
<h4 class="text-danger">@ViewData["Error"] </h4>


<div class="row">
    <div class="col-md-4">

        <form method="post" asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div>
                <input asp-for="colegio.Id" hidden>
            </div>

            <div class="form-group">
                <b><label asp-for="colegio.Nit" class="control-label"></label></b>
                <input asp-for="colegio.Nit" class="form-control" />
                <span asp-validation-for="colegio.Nit" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <b><label asp-for="colegio.RazonSocial" class="control-label"></label></b>
                <input asp-for="colegio.RazonSocial" class="form-control"/>
                <span asp-validation-for="colegio.RazonSocial" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <b><label asp-for="colegio.Direccion" class="control-label"></label></b>
                <input asp-for="colegio.Direccion" class="form-control" />
                <span asp-validation-for="colegio.Direccion" class="text-danger"> </span>
            </div>
            <br>
            <div class="form-group">
                <b><label asp-for="colegio.Telefono" class="control-label"></label></b>
                <input asp-for="colegio.Telefono" class="form-control" />
                <span asp-validation-for="colegio.Telefono" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <b><label asp-for="colegio.Deporte" class="control-label"></label></b>
                <input asp-for="colegio.Deporte" class="form-control" />
                <span asp-validation-for="colegio.Deporte" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <b><label asp-for="colegio.Licencia" class="control-label"></label></b>
                <input asp-for="colegio.Licencia" class="form-control" />
                <span asp-validation-for="colegio.Licencia" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="Editar"/>
                <a asp-page="./Index" class="btn btn-info">Regresar</a>
            </div>
        </form>

    </div>
</div>
