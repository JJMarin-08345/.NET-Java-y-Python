@page
@model FrontEnd.Pages.CUnidadDeportiva.IndexModel
@{
    ViewData["Title"]="Unidades Deportivas";
}
<h2>Unidades Deportivas</h2>
<p>
    <a asp-page="./Create" class="btn btn-success">Nueva Unidad Deportiva</a>
</p>
<hr/>
<table class="table">
    <thead>
        <tr>
            <th>Ciudad</th>
            <th>Nombre</th>
            <th>Direccion</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tor in Model.lstUnidades){
            <tr>
                <td>@tor.Ciudad</td>
                <td>@tor.Nombre</td>
                <td>@tor.Direccion</td>
                <td>
                    <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@tor.Id">Editar</a>
                    <a asp-page="./Details" class="btn btn-info" asp-route-id="@tor.Id">Detalles</a>
                    <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@tor.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
