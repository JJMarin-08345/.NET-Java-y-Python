@page
@model FrontEnd.Pages.CMunicipio.DetailsModel
@{
    ViewData["Title"]="Detalles Municipio";
}

<h2>Detalles Municipio</h2>
<h4 class="text-danger">@ViewData["Error"]</h4>

<hr/>
<div class="row">
    <div class="col-md-4">
        <form method="get" asp-action="Details">
            <!--<div class="form-group">
                <label class="control-label" asp-for="municipio.Id"></label>
                <input class="form-control" asp-for="municipio.Id" readonly/>
            </div>-->
            <br>
            <div class="form-group">
                <b><label class="control-label" asp-for="municipio.Nombre"></label></b>
                <input class="form-control" asp-for="municipio.Nombre" readonly/>
            </div>
            <br>
            <div class="form-group">
                <b><label class="control-label" asp-for="municipio.Torneos"></label></b>
                <select class="form-control">
                    <option>--Torneos Inscritos--</option>
                    @foreach (var tor in Model.municipio.Torneos){
                        <option>@tor.Nombre</option>
                    }
                </select>
            </div>
            <br>
            <div class="form-group">
                <a asp-page="./Index" class="btn btn-info">Regresar</a>
            </div>
        </form>
    </div>
</div>
